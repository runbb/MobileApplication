<Page xmlns="http://www.nativescript.org/tns.xsd" navigatedTo="onloaded">
    <ActionBar class="action-bar">
      <Label text="" class="action-bar-title" />
    </ActionBar>
    <GridLayout>
        <ActivityIndicator width="100" height="100" id="loading" busy="true"/>
        <ListView items="{{ topics }}" id="topicsList">
            <ListView.itemTemplate>
                <GridLayout columns="auto,*" rows="*,auto,auto">
                    <Image class="topicImage" src="{{ image_url }}" stretch="aspectFit" row="0" rowSpan="3" col="0" visibility="{{ image_url ? 'visible' : 'collapsed' }}"/>
                    <Label class="topicTitle" text="{{ title }}" col="1" row="0" textWrap="true"/>
                    <GridLayout row="1" columns="*,*,*" verticalAlign="middle" col="1">
                        <Label class="topicDetails" textWrap="true">
                            <FormattedString>
                                <Span class="fa" text="&#xf112; " style="font-size: 20px;"></Span>
                                <Span text="{{ ' ' + reply_count }}" fontWeight="Bold"></Span>
                            </FormattedString>
                        </Label>
                        <Label class="topicDetails" textWrap="true" col="1" verticalAlign="middle">
                            <FormattedString>
                                <Span class="fa" text="&#xf06e; " style="font-size: 20px;"></Span>
                                <Span text="{{ ' ' + views }}" fontWeight="Bold"></Span>
                            </FormattedString>
                        </Label>
                        <Label class="topicDetails" textWrap="true" col="2">
                            <FormattedString>
                                <Span class="fa" text="&#xf073; " style="font-size: 20px;"></Span>
                                <Span text="{{ created_at }}" fontWeight="Bold"></Span>
                            </FormattedString>
                        </Label>
                    </GridLayout>
                    <GridLayout row="2" col="1" class="topicTags" visibility="{{ (tags.length != 0) ? 'visible' : 'collapsed' }}">
                        <Repeater items="{{ tags }}">
                            <Repeater.itemsLayout>
                                <FlexboxLayout flexWrap="wrap" justifyContent="flex-end" />
                            </Repeater.itemsLayout>
                            <Repeater.itemTemplate>
                                <Label class="tagLabel" style="margin:3px;">
                                    <FormattedString>
                                        <Span text="{{ $value + ' ' }}"></Span>
                                        <Span class="fa" text="&#xf02c;" style="font-size: 12px;"></Span>
                                    </FormattedString>
                                </Label>
                            </Repeater.itemTemplate>
                        </Repeater>
                    </GridLayout>
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>
    </GridLayout>
</Page>